AREA RESET,DATA,READONLY
EXPORT __Vectors
__Vectors
DCD 0x10001000
DCD Reset_Handler
ALIGN
AREA mycode,CODE,READONLY
ENTRY
EXPORT Reset_Handler
Reset_Handler
LDR R0,=SRC
MOV R1,#10
MOV R3,#1
LOOP
STR R3,[R0],#4
ADD R3,#1
SUBS R1,#1
BNE LOOP
LDR R0,=SRC
MOV R5,R0
ADD R0,R0,#(SIZE-1)*4
;SUB R1,R0,#(OL-1)*4
;ADD R1,R1,#(SIZE-1)*4
MOV R3,#5
UP
LDR R6,[R5]
LDR R7,[R0]
STR R7,[R5],#4
STR R6,[R0],#-4
SUBS R3,#1
BNE UP
STOP
B STOP
SIZE EQU 10
;OL EQU 2
AREA myData,DATA,READWRITE
SRC DCD 0
END
